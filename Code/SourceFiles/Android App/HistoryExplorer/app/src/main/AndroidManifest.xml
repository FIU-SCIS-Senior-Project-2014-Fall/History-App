<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.senior.historyexplorer" >

    <uses-permission android:name="permission_name"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="20" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/cassiniglobe" >

        <!--Splash Screen-->
        <activity
            android:name="com.project.senior.historyexplorer.Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Main Screen -->
        <activity
            android:name="com.project.senior.historyexplorer.MainMenu"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black">>
        </activity>

        <!--Map Screen-->
        <activity android:name="com.project.senior.historyexplorer.MapsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Black.NoTitleBar">
        </activity>

        <!--Now Trending Screen-->
        <activity android:name="com.project.senior.historyexplorer.TrendingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName=".MainMenu"
            android:label="@string/now_trending"
            android:theme="@android:style/Theme.Black">
        </activity>

        <!--Google Maps API Information
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAPsiPz2JOFabatm4CgaqeLqEFH4xOGuTQ" />-->
    </application>

</manifest>